<h1><%= @event.title %></h1>
<h3>Date: <%= @event.date %></h3>
<h3>Volunteers Needed: <%= @event.volunteers_needed %></h3>
<h3>Description: <%= @event.description %><br></h3><br>

<form action="/comments" method="POST">
<h2>New Comments</h2><br>
Comments: <input type="text" name="content"></input><br>
<input type="hidden" name="event" value=<%=@event.id %>>
<br></br>
<button id="submit" type="submit" >Submit</button>
</form>
<% @event.comments.each do |comment| %>
<h3>Posted By: <%=comment.user.username || ''%></h3>
<h3>Comments: <%= comment.content %></h3>
<%end%>



 <form action="/events/<%=@event.id%>/delete" method="POST">
   <input type="hidden" name="_method" value="DELETE">
<button type="submit" value="Delete Events">Delete Event</button>


<button><a href="/events/<%=@event.id%>/edit">Edit Event </a></button>
<button><a href="/events">Home</a></button>
<button><a href="/events/new">New Event</a></button>
</form>
